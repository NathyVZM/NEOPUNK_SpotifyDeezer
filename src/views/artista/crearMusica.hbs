<div class="create">
    <h1>Datos de la Musica</h1>
</div>
<form action="/artista/musica" method="POST" id="form-artista" class="form-playlist">
    <img src="/assets/icons/albumIcon.svg" alt="">
    <input type="text" name="title" placeholder="Titulo">
    <input type="date" name="date" placeholder="Fecha de Lanzamiento">

    <select name="typeAlbum">
        <option value="album">Album</option>
        <option value="ep">EP</option>
        <option value="single">Sencillo</option>
    </select>

    <select name="artist" aria-placeholder="Artista">
        {{#each artistas}}
        <option value="{{ _id }}">{{ name }}</option>
        {{/each}}
    </select>
    <button type="button" id="crearCancion">Aniadir Cancion</button>
    <div id="espacioCanciones"></div>


    <button type="submit" id="guardar">Guardar</button>
</form>